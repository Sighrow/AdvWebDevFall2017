extends layout

block content
    div
        img(src="../load.gif" id="loadgif" style="float: right; width: 45px; height: 45px; margin-top: -6px; display: none;")
        h1= title
    hr(style="color: orange; border-style: solid;")
    h2=message
    form(action="/", method="post", role="form")     
        h3 Name
        input#firstName(type="text" placeholder="First Name" name="firstName")
        input#lastName(type="text" placeholder="Last Name" name="lastName")
        h3 Department
        select#department(name="department")
            option Accounting
            option Customer Service
            option Human Resources
            option Information Technology
            option Marketing
        input#jobTitle(type="text" placeholder="Job Title" name="jobTitle")
        h3 Salary
        input#salary(type="number" placeholder="Salary" name="salary" step="1000")
        h3 Start Date
        input#startDate(type="date" name="startDate" placeholder="MM/DD/YYYY")
        h3 
        input(type="submit" value="Add Employee" onclick="document.getElementById('loadgif').style.display='inline'") 
